<blockquote id="<%= dom_id(feedback) %>">
  <p>
    <%= feedback.body %>
    <%= link_to("remove", feedback, method:  :delete,
                                    remote:  true,
                                    confirm: "Are you sure?",
                                    class:   "btn btn-danger pull-right") if manager? %>
  </p>
  <%= content_tag(:small, feedback.user ? feedback.user.name : "By Anonymous") %>
</blockquote>
